@{
    ViewBag.Title = "Home Page";
}

<div class="row" ng-if="display === 'login'">
    <div class="col-md-8">
        <section id="loginForm">
            <div class="form-horizontal">
                <h4>Login</h4>
                <hr />
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="text" ng-model="user.Email" class="form-control" placeholder="Email" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" ng-click="getUser()" value="Log in" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
<div ng-if="display === 'home'">
    <div class="jumbotron">
        <h1>Products</h1>
    </div>
    <div class="column">
        <div ng-repeat="prod in products">
            <a href="" ng-click="getProduct(prod.Id)">{{prod.Name}}</a>
            <hr/>
        </div>
    </div>
</div>
<div ng-if="display === 'product'">
    <div class="jumbotron">
        <h1>{{product.Name}}</h1>
    </div>
    <div class="alert alert-info" ng-if="product.IsPopular">
        <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  This product is popular!
    </div>
    <button class="btn btn-primary" ng-if="isLoggedin" ng-click="addOrder()" ng-disabled="isOrdering">Order now</button>
</div>